// passwordPrompt.js

// Set the hardcoded correct password
const correctPassword = "correctPassword";
let userInput;

// Use a do-while loop to prompt for the password until the correct one is entered
do {
    userInput = prompt("Enter your password:"); // Prompt user for password
    if (userInput !== correctPassword) {
        console.log("Incorrect, try again."); // Log message if password is wrong
    }
} while (userInput !== correctPassword); // Repeat until the correct password is entered

console.log("Access granted."); // Log success message when correct password is entered
